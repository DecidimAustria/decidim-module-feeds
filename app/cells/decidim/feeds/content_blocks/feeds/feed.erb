  <div class="card__grid-metadata">
    <div class="author" data-author="">
      <span>
        <div class="author__container">
          <span class="author__avatar-container">
            <img alt="Avatar: Sint est." class="author__avatar" src="/decidim-packs/media/images/default-avatar-aaa9e55bac5d7159b847.svg">
          </span>
          <span class="author__name">Author 1</span>
        </div>
      </span>
      
    </div>
    <span data-comments-count="">
      <%= icon "chat-3-line" %>
      Kommentare (8) 
    </span>
    <ul class="feed__actions" role="menu">
      <li role="menuitem" tabindex="0" aria-expanded="false">
