<div class="card__grid feeds__feed" data-content="<%= category %>">
  <%= render partial: "decidim/feeds/content_blocks/feeds/meta.html" %>
  <div class="card__grid-img">
      <%= image_pack_tag('media/images/130828cp0030-768x511.webp', alt: 'Description') %>
  </div>
  <div class="card__grid-text">
    <%= post.body %>
  </div>
  <% if category == 'survey' %>
    <%= render partial: "decidim/feeds/content_blocks/feeds/survey.html" %>
  <% end %>
  <%= render partial: "decidim/feeds/content_blocks/feeds/comment.html" %>
</div>