<main class="feeds__container p-4">
  <div class="feeds__body">
    <div class="card__grid-home w-full">
      <% if current_user %>
        <div class="card__grid feeds__feed feeds__feed_newElement">
          <button class="btn circle feeds__feed_newElement-opener" aria-expanded="false" aria-controls="newElementForm" type="button">
            <%= icon "close-circle-line" %>
            <span class="sr-only"><%= t("decidim.components.feeds.newFeed.title") %></span>
          </button>
          <%= render partial: "decidim/feeds/posts/form.html" %>
        </div>
      <% end %>
      <%= render partial: "decidim/feeds/posts/feed.html" %>
    </div>
  </div>
  <%= render partial: "decidim/feeds/posts/sidebar.html" %>
</main>

<dialog id="confirmationModal" class="p-4 shadow-md rounded-md ring-1 ring-feeds-hv" aria-labelledby="confirmationModalLabel" aria-modal="true">
  <div id="confirmationModalLabel" class="flex flex-col gap-4">
    <p>Das Status der Beitrag wird ge√§ndert und die Kommentarfunktion geschlossen.</p>
    <div class="flex p-4 gap-4 justify-center">
      <button id="confirmButton" class="button button__sm button__transparent-primary">
        JA 
        <%= icon('check-line') %>
      </button>
      <button id="cancelButton" class="button button__sm button__transparent-primary">
        Abbrechen
        <%= icon('close-line') %>
      </button>
    </div>
  </div>
</dialog>
<%= append_javascript_pack_tag "decidim_feeds" %>
