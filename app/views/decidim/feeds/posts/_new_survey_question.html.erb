<div>
  <%= form.label :title, t("decidim.components.feeds.newFeed.newSurvey.questionTitle"), class: 'sr-only' %>
  <%= form.text_field :title, class: 'form-control', placeholder: t("decidim.components.feeds.newFeed.newSurvey.questionTitle") %>
  <%= form.label :question_type, t("decidim.components.feeds.newFeed.newSurvey.questionType"), class: 'sr-only' %>
  <%= form.select :question_type, options_for_select(Decidim::Feeds::Question.question_types.keys.map { |key| [t("decidim.components.feeds.newFeed.newSurvey.questionTypes.#{key}"), key] }), {}, class: 'form-control' %>

  <button class="feeds__feed_newAnswer-btn" type="button" aria-haspopup="true" aria-controls="newAnswer-1">
    <%= t("decidim.components.feeds.newFeed.newSurvey.newAnswer") %>
    <%= icon "add-line" %>
  </button>
  <div id="feeds__feed_newSurvey_liveRegion" aria-live="polite" class="sr-only"></div>

  <div class="feeds__feed_newSurvey_answersContainer" data-question-id="NEW_RECORD"></div>
  
  <small>
    <%#= link_to t("decidim.components.feeds.newFeed.newSurvey.deleteQuestion"), "#" %>
  </small>
</div>
