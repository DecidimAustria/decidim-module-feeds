<button class="feeds__feed_newSurvey-btn" type="button" aria-haspopup="true" aria-controls="newQuestion-1">
  <%= t("decidim.components.feeds.newFeed.newSurvey.newQuestion") %>
  <%= icon "add-line" %>
</button>
<div id="feeds__feed_newSurvey_liveRegion" aria-live="polite" class="sr-only"></div>
<div id="feeds__feed_newSurvey_questionsContainer">
  <template id="question_template">
    <%#= form.fields_for :questions, @form.questions.new, child_index: "NEW_RECORD" do |question_form| %>
    <%= fields_for "post[questions][NEW_RECORD]", Decidim::Feeds::Question.new do |question_form| %>
      <%= render partial: "decidim/feeds/posts/new_survey_question", locals: { form: question_form } %>
    <% end %>
  </template>
  <template id="answer_template">
    <%#= form.fields_for :answers, @form.answers.new, child_index: "NEW_RECORD" do |answer_form| %>
    <%= fields_for "post[questions][QUESTION_RECORD][answers][NEW_RECORD]", Decidim::Feeds::Answer.new do |answer_form| %>
      <%= render partial: "decidim/feeds/posts/new_survey_answer", locals: { form: answer_form } %>
    <% end %>
  </template>

</div>
